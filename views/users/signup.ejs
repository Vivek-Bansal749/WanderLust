<% layout("/layouts/boilerplate") %>


<div class="row">
    
    <div class="col-6 offset-3">
        <h1>SignUp on Wanderlust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
             <div class="mb-3">
            <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control"  id="username" required>
        <div class="valid-feedback">Valid Username</div>
        <div class="invalid-feedback">Please enter the Name</div>
        </div>
        <label for="email" class="form-label">E-mail</label>
        <input type="email" name="email" class="form-control"  id="email" required>
        <div class="invalid-feedback">Please enter the E-mail</div>
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control"  id="password" required> <br>
        <div class="invalid-feedback">Please enter the Password</div>
        <button class="btn btn-success">Signup</button>
        </form>
    </div>
    </div>